<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.starterkit.todo.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.starterkit.todo.perspectives.Main"
            id="com.starterkit.todo.perspectives.Main"
            name="Main">
      </perspective>
      <perspective
            class="com.starterkit.todo.perspectives.Advanced"
            id="com.starterkit.todo.perspectives.Advanced"
            name="TaskManager">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.starterkit.todo.views.List"
            id="com.starterkit.todo.views.List"
            name="Task List"
            restorable="true">
      </view>
      <view
            class="com.starterkit.todo.views.ArchiveList"
            id="com.starterkit.todo.views.ArchiveList"
            name="Archive">
      </view>
      <view
            class="com.starterkit.todo.views.AddTask"
            id="com.starterkit.todo.perspectives.AddTask"
            name="Add Task">
      </view>
      <view
            class="com.starterkit.todo.views.DetailsEdit"
            id="com.starterkit.todo.views.DetailsEdit"
            name="Details">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.starterkit.todo.perspectives.Main">
         <view
               id="com.starterkit.todo.views.List"
               minimized="false"
               ratio="0.96f"
               relationship="stack"
               relative="org.eclipse.ui.editorss"
               showTitle="false">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="com.starterkit.todo.perspectives.Advanced">
         <view
               id="com.starterkit.todo.views.ArchiveList"
               minimized="false"
               ratio="0.75"
               relationship="left"
               relative="org.eclipse.ui.editorss">
         </view>
         <view
               id="com.starterkit.todo.views.List"
               minimized="false"
               ratio="0.4"
               relationship="right"
               relative="com.starterkit.todo.views.ArchiveList">
         </view>
         <view
               id="com.starterkit.todo.perspectives.AddTask"
               minimized="false"
               ratio="0.7"
               relationship="bottom"
               relative="com.starterkit.todo.views.DetailsEdit">
         </view>
         <view
               closeable="true"
               id="com.starterkit.todo.views.DetailsEdit"
               minimized="false"
               ratio="0.8"
               relationship="right"
               relative="org.eclipse.ui.editorss">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
